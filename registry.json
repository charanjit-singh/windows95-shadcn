{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "windows95-cn",
  "homepage": "https://github.com/charanjit-singh/windows95-shadcn",
  "dependencies": [
    "tailwind-merge",
    "clsx",
    "class-variance-authority"
  ],
  "items": [
    {
      "$schema": "https://ui.shadcn.com/schema/registry-item.json",
      "name": "windows95-theme",
      "title": "windows95-theme",
      "type": "registry:style",
      "cssVars": {
        "theme": {
          "shadow-xs": "1px 1px 0 0 var(--border)",
          "shadow-sm": "2px 2px 0 0 var(--border)",
          "shadow": "3px 3px 0 0 var(--border)",
          "shadow-md": "4px 4px 0 0 var(--border)",
          "shadow-lg": "6px 6px 0 0 var(--border)",
          "shadow-xl": "10px 10px 0 1px var(--border)",
          "shadow-2xl": "16px 16px 0 1px var(--border)"
        },
        "light": {
          "background": "0 0% 100%",
          "foreground": "0 0% 0%",
          "card": "192 15% 94%",
          "card-foreground": "0 0% 0%",
          "primary": "210 100% 50%",
          "primary-foreground": "0 0% 100%",
          "muted": "0 0% 85%",
          "muted-foreground": "0 0% 35%",
          "accent": "210 100% 60%",
          "accent-foreground": "0 0% 0%",
          "destructive": "0 100% 50%",
          "destructive-foreground": "0 0% 100%",
          "border": "0 0% 0%",
          "ring": "210 100% 50%"
        },
        "dark": {
          "background": "0 0% 0%",
          "foreground": "0 0% 100%",
          "card": "0 0% 10%",
          "card-foreground": "0 0% 100%",
          "primary": "210 100% 50%",
          "primary-foreground": "0 0% 100%",
          "muted": "0 0% 20%",
          "muted-foreground": "0 0% 70%",
          "accent": "210 100% 40%",
          "accent-foreground": "0 0% 100%",
          "destructive": "0 100% 50%",
          "destructive-foreground": "0 0% 100%",
          "border": "0 0% 50%",
          "ring": "210 100% 50%"
        }
      }
    },
    {
      "name": "utils",
      "type": "registry:lib",
      "title": "Utils",
      "dependencies": [
        "clsx",
        "tailwind-merge"
      ],
      "files": [
        {
          "path": "lib/utils.ts",
          "type": "registry:lib"
        }
      ]
    },
    {
      "name": "alert-dialog",
      "type": "registry:component",
      "title": "Alert Dialog",
      "description": "A modal dialog that interrupts the user with important content and expects a response.",
      "dependencies": [
        "@radix-ui/react-alert-dialog"
      ],
      "files": [
        {
          "path": "components/windows95-ui/alert-dialog.tsx",
          "type": "registry:component"
        }
      ]
    },
    {
